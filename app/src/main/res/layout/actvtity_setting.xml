<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
   xmlns:qzd="http://schemas.android.com/apk/res/com.qzd.mobilesafe"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <TextView
        android:background="#8866ff00"
        android:gravity="center"
        android:textColor="#000000"
        android:textSize="22sp"
        android:id="@+id/textView1"
        android:layout_width="fill_parent"
        android:layout_height="55dip"
        android:text="设置中心" />
	
  	<com.qzd.mobilesafe.ui.SettingItemView
  	    qzd:title="设置自动更新"
  	    qzd:desc_on="设置自动更新已经开启"
  	    qzd:desc_off="设置自动更新已经已经关闭"
  	    android:id="@+id/siv_update"
  	    android:layout_width="fill_parent"
        android:layout_height="wrap_content"
  	    />
  	<com.qzd.mobilesafe.ui.SettingItemView
  	    qzd:title="电话归属地显示设置"
  	    qzd:desc_on="归属地显示已经开启"
  	    qzd:desc_off="归属地显示已经关闭"
  	    android:id="@+id/siv_showaddress"
  	    android:layout_width="fill_parent"
        android:layout_height="wrap_content"
  	    />
  	
  	<com.qzd.mobilesafe.ui.SettingClickView
  	    android:id="@+id/scv_changebg"
  	    android:layout_width="fill_parent"
        android:layout_height="wrap_content"
  	    />
  	
  	<com.qzd.mobilesafe.ui.SettingItemView
  	    qzd:title="黑名单拦截设置"
  	    qzd:desc_on="黑名单拦截已经开启"
  	    qzd:desc_off="黑名单拦截已经关闭"
  	    android:id="@+id/siv_callsms_safe"
  	    android:layout_width="fill_parent"
        android:layout_height="wrap_content"
  	    />
</LinearLayout>

















